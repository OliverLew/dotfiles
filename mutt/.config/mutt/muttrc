source ~/.config/mutt/muttrc.accounts.work
folder-hook $folder 'source ~/.config/mutt/muttrc.accounts.work'
macro index,pager <f3> '<sync-mailbox><enter-command>source ~/.config/mutt/muttrc.accounts.work<enter><change-folder>!<enter>'

source ~/.config/mutt/muttrc.accounts.personal
folder-hook $folder 'source ~/.config/mutt/muttrc.accounts.personal'
macro index,pager <f2> '<sync-mailbox><enter-command>source ~/.config/mutt/muttrc.accounts.personal<enter><change-folder>!<enter>'

# editor, use vim
set editor = "vim"
set sig_on_top = yes
# disable '+' markers at the beginning of every wrapped line
unset markers

# show sidebar
set sidebar_visible = no
set sidebar_width = 80

# sidebar format: Boxname [New messages]  Total size
set sidebar_format = "%B %?N?[%N]?%* %S"
# forward subject formats
set forward_format = "Fwd: %s"
# index (list of mails)
set index_format = "%4C %Z %[%y/%m/%d %R] %-15.15L (%?l?%4l&%4c?) %s"

# cache folder
set message_cachedir = ~/.cache/mutt/bodies
set header_cache = ~/.cache/mutt/headers
# interval of mail checking
set mail_check = 30
set timeout = 30
# Allow Mutt to open a new IMAP connection automatically.
unset imap_passive
# keep the IMAP connection alive
set imap_keepalive = 30
# suppress pause when switching mail boxes
set sleep_time = 0
# default recipient and subject when reply
set fast_reply = yes
# include original message when reply
set include = yes
# check all mailboxes
set imap_check_subscribed = yes
set imap_list_subscribed = yes
# sort by threads
set sort = "threads"
set sort_aux = "last-date-received"
# index scroll
set menu_scroll

# aliases
set alias_file = "~/.config/mutt/muttrc.aliases"
set reverse_alias = yes
source $alias_file

# header
# show only those headers
ignore *
unignore Subject: From: To: CC: BCC: Date:
# show by this order
unhdr_order *
hdr_order Subject: From: To: CC: BCC: Date:

# show index on top and pager below
set pager_context = 3
set pager_index_lines = 10
# stop at the bottom of a message instead of go to next message
set pager_stop = yes

# email content
auto_view text/html                                   # view html automatically
alternative_order text/plain text/enriched text/html  # save html for last

# color configuration
source ~/.config/mutt/muttrc.colors
# keybindings
#source ~/.config/mutt/muttrc.unbindall
source ~/.config/mutt/muttrc.keybindings

#!/bin/sh

if command -v st
then
    TERMINAL=st
elif command -v urxvtc
then
    TERMINAL=urxvtc
elif command -v termite
then
    TERMINAL=termite
elif command -v xterm
then
    TERMINAL=xterm
else
    notify-send "no available terminal emulator, please modify the script"
fi

if command -v neomutt
then
    MUTT=neomutt
elif command -v neomutt
then
    MUTT=mutt
else
    notify-send "mutt/neomutt not installed"
fi

exec $TERMINAL -e $MUTT "$@"

#!/bin/sh
count=0
for range in $(fc-match --format='%{charset}\n' "$1")
do
    if echo "$range" | grep - > /dev/null
    then
        first=${range%-*}
        last=${range#*-}

        n=$((0x$first))
        m=$((0x$last))
        while [ "$n" -le "$m"  ]
        do
            n_hex=$(printf "%04x" "$n")
            printf "%04x \u$n_hex\t" "$n"
            count=$((count + 1))
            if [ $((count % 8)) = 0 ]
            then
                printf "\n"
            fi
            n=$((n + 1))
        done
    else
        n=$((0x$range))
        n_hex=$(printf "%04x" "$n")
        printf "%04x \u$n_hex\t" "$n"
        count=$((count + 1))
        if [ $((count % 8)) = 0 ]
        then
            printf "\n"
        fi
    fi
done
printf "\n"

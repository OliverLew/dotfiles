#!/bin/sh

batteries=$(ls -d /sys/class/power_supply/BAT* 2> /dev/null)
if [ -z "$batteries" ]
then
    # probably laptop, pretend it's fully charged
    echo 100
else
    for battery in $batteries
    do
        b=$(cat "$battery"/capacity)
        if [ "$b" -gt 100 ]
        then
            echo 100
        else
            echo "$b"
        fi
    done
fi

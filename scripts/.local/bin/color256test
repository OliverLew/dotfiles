#! /bin/sh
for i in $(seq 0 255) ; do
    if [ "$TERM" = "fbterm" ]; then
        printf "\e[2;%d}%3d\e[2;0} " "$i" "$i"
    else
        printf "\e[48;5;%sm%3d\e[0m " "$i" "$i"
    fi
    if { [ "$i" -le 15 ] && [ $(( i % 8 )) = 7 ]; } \
    || { [ "$i" -gt 15 ] && [ $(( i % 6 )) = 3 ]; }; then
        printf "\n";
    fi
done

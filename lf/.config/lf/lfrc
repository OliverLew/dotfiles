# Setting
set nodrawbox
set icons
set hidden
set info size
set ifs "\n"
set filesep "\n"
set previewer pv
set cleaner preview-image

# Key bindings
map e $$EDITOR $fx
map <c-y> up
map <c-e> down
map <enter> open
map gh cd ~
map gr cd /
map <m-3> open
map <m-2> updir
map <m-up>    up
map <m-down>  down

# Commands
cmd open $ open $fx

# TODO: all the colors
# Keymappings
map h navigate previous
map l navigate next
map <Left> navigate previous
map <Right> navigate next
map [presentation] k navigate previous
map [presentation] j navigate next
map [fullscreen] <Up> navigate previous
map [fullscreen] <Down> navigate next
map [fullscreen] <Left> navigate previous
map [fullscreen] <Right> navigate next
# UI toggling
map b toggle_statusbar
# Mode changing
map f toggle_fullscreen
map p toggle_presentation
map [presentation] p toggle_presentation
map [fullscreen] f toggle_fullscreen

# Synctex
set synctex true
set synctex-editor-command "vim +%{line} %{input}"

# User interface
set guioptions "vhs"
set highlight-transparency 0.2

# Colors
set default-fg "#EEFFFF"
set default-bg "#212121"
set statusbar-bg "#212121"
set statusbar-fg "#EEFFFF"
# Recolor
set recolor false
set recolor-keephue true
set recolor-reverse-video true
set recolor-darkcolor "#FFFFFF"
set recolor-lightcolor "#212121"

# Clipboard
set selection-clipboard "clipboard"

# Default
set adjust-open "width"
set window-title-basename true

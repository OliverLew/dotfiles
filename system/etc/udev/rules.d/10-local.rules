# map caps key to escape for all keyboards with capslock
KERNEL       == "input[0-9]*::capslock",\
SUBSYSTEM    == "leds",\
ACTION       == "add",\
RUN          += "/bin/su - oliver -c 'echo capslock > /tmp/udev-local.fifo'"

# power on/off notify
KERNEL       == "ADP0|AC0",\
SUBSYSTEM    == "power_supply",\
ACTION       == "change",\
ATTR{online} == "[01]",\
RUN          += "/bin/su - oliver -c 'echo ac $attr{online} > /tmp/udev-local.fifo'"

# monitor change
KERNEL       == "card0",\
SUBSYSTEM    == "drm",\
ACTION       == "change",\
RUN          += "/bin/su - oliver -c 'echo drm > /tmp/udev-local.fifo'"


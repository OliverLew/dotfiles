# GUI
sub-font-size=40
no-keepaspect-window

# Screenshot
screenshot-format=jpg
screenshot-directory=~/Pictures

# OSD
osd-font="DejaVu Sans"
osd-color=1.0/1.0/1.0/0.6
osd-border-color=1.0/1.0/1.0/0.0
osd-on-seek="msg-bar"
# osd in terminal
term-osd-bar=yes
term-osd-bar-chars="[=>-]"

# Hardware decoding, for my AMD graphics card and x11 desktop environment.
#
# I am using default vo=gpu and gpu-context=x11egl because hdr tone mapping
# can't work if using vo=vaapi, see
# https://wiki.archlinux.org/index.php/Mpv#Hardware_decoding
hwdec=vaapi
gpu-context=x11egl
# removed mpeg2video(normally dvd) hardware decoding, having some troubles
hwdec-codecs=h264,vc1,hevc,vp9

# HDR settings
tone-mapping=reinhard
tone-mapping-param=0.5
tone-mapping-desaturate=0.9
